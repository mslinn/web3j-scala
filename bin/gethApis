#!/bin/bash

# Discover the geth APIs provided by invoking the modules JSON-RPC method
# See https://github.com/ethereum/go-ethereum/wiki/Management-APIs

echo '{"jsonrpc":"2.0","method":"rpc_modules","params":[],"id":1}' | \
  nc -NU /home/mslinn/.ethereum/devnet/geth.ipc | \
  python -m json.tool

# Typical response:
# {
#     "jsonrpc":"2.0",
#     "id":1,
#     "result":{
#        "admin":"1.0",
#        "clique":"1.0",
#        "debug":"1.0",
#        "eth":"1.0",
#        "miner":"1.0",
#        "net":"1.0",
#        "personal":"1.0",
#        "rpc":"1.0",
#        "shh":"1.0",
#        "txpool":"1.0",
#        "web3":"1.0"
#     }
#  }
